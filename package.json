{
  "name": "discord-valorant-meister",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist",
    "dev": "nodemon -e ts -x ts-node src/index.ts",
    "debug": "nodemon -e ts -x ts-node --inspect src/index.ts",
    "build": "rimraf dist && tsc",
    "test": "yarn run lint",
    "lint": "eslint \"src/**/*.{js,ts}\" --ignore-path .gitignore"
  },
  "author": "sct",
  "license": "MIT",
  "devDependencies": {
    "@types/config": "^0.0.36",
    "@types/sqlite3": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "config": "^1.30.0",
    "discord.js": "^11.6.4",
    "sqlite3": "^4.1.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write"
    ]
  }
}
